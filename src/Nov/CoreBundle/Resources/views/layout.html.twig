{% extends 'MsiCmfBundle:Page:layout.html.twig' %}

{% block css %}
<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('bundles/novcore/css/style.css') }}">
<link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
{{ parent() }}
{% endblock %}

{% block js %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
{{ parent() }}
{% endblock %}

{% block body %}
<div class="wrap">
    <div class="container">
        <div class="row">
            <div class="span4">
                <div class="sidebar">
                    <p style="margin: -15px -15px 15px;"><a href="{{ path('homepage') }}"><img src="/bundles/novcore/images/logo_diya.gif" alt="0"></a></p>
                    <p class="nav-collapse-trigger">
                        <a href="#" class="btn btn-inverse pull-right" data-toggle="collapse" data-target=".nav-collapse">
                            <i style="margin-top: 3px;" class="icon-white icon-list"></i>
                        </a>
                    </p>
                    <div class="nav-collapse collapse">
                        {{ knp_menu_render('AcmeDemoBundle:MenuBuilder:mainMenu', {'allow_safe_labels': true, 'depth': 3, 'currentClass': 'active'}) }}
                    </div>
                    {#<hr>
                    <address>
                        6090 rue Sherbrooke Est<br>
                        Montréal (Québec) H1N 1C1
                    </address>
                    <address>
                        514.256.2777<br>
                        <a target="_blank" href="mailto:#">info@diya.com</a>
                    </address>#}
                </div>
            </div>
            <div class="span8">
                <div class="content">
                    {% if page.showTitle %}
                        <h2>{{ block('title') }}</h2>
                    {% endif %}
                    {{ msi_block_render('content_top', page) }}
                    {{ block('page_content') }}
                    {{ msi_block_render('content_bottom', page) }}
                </div>
            </div>
        </div>
        <div class="push"></div>
    </div>
</div>
<div class="container">
    <div class="footer">
        <p><small class="muted">&copy; {{ 'now'|date('Y') }} {{ site.translation.brand }}</small></p>
    </div>
</div>
{% endblock body %}
